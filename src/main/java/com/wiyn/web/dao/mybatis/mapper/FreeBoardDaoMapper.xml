<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wiyn.web.dao.FreeBoardDao">

	<select id="lastId" resultType="String">
		SELECT MAX(CAST(id AS UNSIGNED)) id 
		FROM FreeBoard
	</select>

<select resultType="com.wiyn.web.entity.FreeBoard" id="getList"> 

		SELECT `FreeBoard`.`id`,
    `FreeBoard`.`title`,
    `FreeBoard`.`contentSrc`,
    `FreeBoard`.`content`,
    `FreeBoard`.`hit`,
    `FreeBoard`.`regDate`,
    `FreeBoard`.`memberId`
FROM `lsedb`.`FreeBoard`

</select>

<insert id="add" parameterType="com.wiyn.web.entity.FreeBoard">
	<selectKey order="BEFORE" keyProperty="id" resultType="String">
		select max(cast(id as unsigned))+1 id from FreeBoard
	</selectKey>

	INSERT INTO FreeBoard
	(`id`,
	`title`,
	`contentSrc`,
	`content`,
	`regDate`,
	`memberId`)

	VALUES
	(
	#{id},
	#{title},
	#{contentSrc},
	#{content},
	now(),
	#{memberId}
	)
	
</insert>

<delete id="delete">
	DELETE FROM FreeBoard
	WHERE id=#{id}
	
</delete>


</mapper>